---
import "../../styles/global.css";

export interface Props {
    logoText?: string;
    logoSrc?: string;
    logoLink?: string;
    loginText?: string;
    loginLink?: string;
    signupText?: string;
    signupLink?: string;
}

const {
    logoText,
    logoSrc,
    logoLink = "/",
    loginText,
    loginLink,
    signupText,
    signupLink,
} = Astro.props;
---

<header class="header-lite">
    <div class="container">
        {
            (logoText || logoSrc) && (
                <a href={logoLink} class="logo">
                    {logoSrc ? <img src={logoSrc} alt="Logo" /> : null}
                    {logoText ? <span>{logoText}</span> : null}
                </a>
            )
        }

        <button id="menu-toggle" class="menu-toggle" aria-label="Toggle menu">
            â˜°
        </button>

        <nav id="nav-menu">
            <ul>
                <slot />
            </ul>
        </nav>

        {
            (loginText || signupText) && (
                <div class="buttons">
                    {loginText && loginLink && (
                        <a href={loginLink} class="login" title={loginText}>
                            {loginText}
                        </a>
                    )}
                    {signupText && signupLink && (
                        <a href={signupLink} class="signup" title={signupText}>
                            {signupText}
                        </a>
                    )}
                </div>
            )
        }
    </div>
</header>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const menuToggle = document.getElementById("menu-toggle");
        const navMenu = document.getElementById("nav-menu");

        menuToggle?.addEventListener("click", () => {
            navMenu?.classList.toggle("open");
        });
    });
</script>

<style>
    .header-lite {
        display: flex;
        justify-content: center;
        padding: 15px 20px;

        .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            max-width: 1200px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: bold;
            font-size: 1.2rem;
            text-decoration: none;
            color: light-dark(var(--text-dark), var(--text-light));

            img {
                height: 30px;
                width: auto;
            }
        }

        .menu-toggle {
            display: none;
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
            color: light-dark(var(--text-dark), var(--text-light));
        }

        nav {
            ul {
                list-style: none;
                display: flex;
                gap: 20px;

                li {
                    margin: 0;

                    a {
                        text-decoration: none;
                        color: light-dark(var(--text-dark), var(--text-light));

                        &:hover {
                            text-decoration: underline;
                        }
                    }
                }
            }
        }

        .buttons {
            display: flex;
            align-items: center;
            gap: 10px;

            a {
                padding: 10px 20px;
                border-radius: 20px;
                text-decoration: none;
            }

            .login {
                color: light-dark(var(--text-dark), var(--text-light));

                &:hover {
                    background-color: light-dark(
                        hsl(0, 0%, 90%),
                        hsl(215, 20%, 15%)
                    );
                }
            }

            .signup {
                background-color: hsl(225, 75%, 50%);
                color: var(--text-light);

                &:hover {
                    background-color: hsl(225, 75%, 45%);
                }
            }
        }

        @media (width < 640px) {
            .menu-toggle {
                display: block;
            }

            nav {
                position: absolute;
                top: 60px;
                left: 0;
                width: 100%;
                background: light-dark(hsl(220, 15%, 95%), hsl(220, 15%, 10%));
                display: none;
                flex-direction: column;
                align-items: center;
                padding: 15px 0;

                ul {
                    flex-direction: column;
                    width: 100%;
                    text-align: center;

                    li {
                        width: 100%;

                        a {
                            display: block;
                            padding: 10px;
                            width: 100%;
                        }
                    }
                }
            }

            nav.open {
                display: flex;
            }

            .buttons {
                display: none;
            }
        }
    }
</style>
